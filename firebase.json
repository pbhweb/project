{
    "hosting": {
      "public": "public",
      "ignore": [
        "firebase.json",
        "*/.",
        "*/node_modules/*"
      ],
      "redirects": [
        {
          "source": "/__/auth/handler",
          "type": 302,
          "destination": "/auth/handler"
        }
      ],
      "rewrites": [
        {
          "source": "/auth/**",
          "function": "app"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  }