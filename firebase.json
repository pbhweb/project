{
    "hosting": {
      "public": "project",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "redirects": [
        {
          "source": "/__/auth/handler",
          "destination": "/project/desktop.html",
          "type": 301
        }
      ],
      "ignore": [
        "firebase.json",
        "*/.",
        "*/node_modules/*"
      ]
    }
  }